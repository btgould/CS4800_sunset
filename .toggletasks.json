{
	"tasks": [
		{
			"name": "cmake",
			"cmd": "cmake -H. -Bbuild",
			"cwd": "${config_dir}",
			"tags": ["build"]
		},
		{
			"name": "make",
			"cmd": "cmake --build build -- -j8",
			"cwd": "${config_dir}",
			"tags": ["build"]
		},
		{
			"name": "generate compile database",
			"cmd": "compiledb -- make -C build",
			"cwd": "${config_dir}",
			"tags": ["build"]
		},
		{
			"name": "run",
			"cmd": "./bin/sunset",
			"cwd": "${config_dir}",
			"tags": ["run"]
		},
		{
			"name": "clean",
			"cmd": "cmake --build build -- clean",
			"cwd": "${config_dir}",
			"tags": ["clean"],
			"close_on_exit": true
		},
		{
			"name": "clean cmake",
			"cmd": "rm -r build",
			"cwd": "${config_dir}",
			"tags": ["clean"],
			"close_on_exit": true
		}
	]
}
